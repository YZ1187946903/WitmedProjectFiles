<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.ekgc.witmed.dao.IdTypeDao">
	<select id="findListByQuery" parameterType="IdType" resultMap="resultMap">
		select
			id,
			text,
			code,
			remark,
			status,
			createUser,
			createTime,
			updateUser,
			updateTime
		from
			sys_id_type
		<where>
			<trim suffixOverrides="and">
				<if test="id != null">id=#{id} and </if>
				<if test="text != null">text like concat('%', #{text}, '%') and </if>
				<if test="code != null">code=#{code} and </if>
				<if test="status != null">status=#{status} and </if>
			</trim>
		</where>
	</select>
	
	<insert id="save" parameterType="idType">
		insert into sys_id_type(
			<trim suffixOverrides=",">
				<if test="id != null">id, </if>
				<if test="text != null">text, </if>
				<if test="code != null">code, </if>
				<if test="remark != null">remark, </if>
				<if test="status != null">status, </if>
				<if test="createUser != null">createUser, </if>
				<if test="createTime != null">createTime, </if>
				<if test="updateUser != null">updateUser, </if>
				<if test="updateTime != null">updateTime, </if>
			</trim>
		) values(
			<trim suffixOverrides=",">
				<if test="id != null">#{id}, </if>
				<if test="text != null">#{text}, </if>
				<if test="code != null">#{code}, </if>
				<if test="remark != null">#{remark}, </if>
				<if test="status != null">#{status}, </if>
				<if test="createUser != null">#{createUser}, </if>
				<if test="createTime != null">#{createTime}, </if>
				<if test="updateUser != null">#{updateUser}, </if>
				<if test="updateTime != null">#{updateTime}, </if>
			</trim>
		)
	</insert>
	
	<update id="update" parameterType="idType">
		update sys_id_type
		<set>
			<trim suffixOverrides=",">
				<if test="text != null">text=#{text}, </if>
				<if test="code != null">code=#{code}, </if>
				<if test="remark != null">remark=#{remark}, </if>
				<if test="status != null">status=#{status}, </if>
				<if test="createUser != null">createUser=#{createUser}, </if>
				<if test="createTime != null">createTime=#{createTime}, </if>
				<if test="updateUser != null">updateUser=#{updateUser}, </if>
				<if test="updateTime != null">updateTime=#{updateTime}, </if>
			</trim>
		</set>
		<where>
			<trim suffixOverrides="and">
				<if test="id != null">id and </if>
			</trim>
		</where>
	</update>
</mapper>